var Build = xdc.useModule('xdc.bld.BuildEnvironment');

var PROFILE = "debug";

for each (var targ in Build.targets) {
    var libAttrs = {
        profile: PROFILE,
    };

    var srcs = [
        "UartPort.c",
        "GpioPeriph.c",
        "GpioPort.c",
        "Adc.c",
        "AdcSeq.c",
        "AdcChan.c",
    ];

    var lib = Pkg.addLibrary("lib/" + Pkg.name, targ)
    lib.addObjects(srcs, libAttrs);
}
